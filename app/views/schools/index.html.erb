<div id="school-list">
  <h1>Listing schools in Bangalore </h1>
  <table>
    <% for school in @schools %>
      <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
        <td>
          <%= image_tag school.image_url, :class => 'list-image' %>
        </td>
        <td class="list-description">
          <dl>
            <dt><%=h school.name %></dt>
            <dd><%=h truncate(school.description.gsub(/<.*?>/,''),:length => 180) %></dd>
            <dd><b>Address:</b> <%=h school.address %> </dd>
            <dd><b>Phone:</b> <%=h school.phone %> </dd>
            <dd><b>Website:</b> <a href="<%= school.website %>"><%= school.website %></a> </dd>
            <dd><b>Email:</b> <%=h school.email %> </dd>
            <dd><b>Curriculum:</b> <%=h school.curriculum %> </dd>
          </dl>
        </td>
        <td class="list-actions">

          <%= link_to 'Show', school %><br/>
          <%= link_to 'Edit', edit_school_path(school) %><br/>
          <%= link_to 'Destroy', school,
              :confirm => 'Are you sure?',
              :method => :delete %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<br />
<%= link_to 'New school', new_school_path %>
